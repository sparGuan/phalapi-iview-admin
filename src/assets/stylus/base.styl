@import './ivu.styl'
// 全局样式基础文件

a:hover
  color: $basecolor !important

ul, ul li
  list-style: none

img
  vertical-align: middle

.appwrap
  width: $wrapwidth
  margin: 0 auto

// 清除浮动
.clearfix:after
  display: block
  content: '.'
  height: 0
  line-height: 0
  font-size: 0
  clear: both
  visibility: hidden

// 超过一行出现省略号
.ellipsis1
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap

// 超过两行出现省略号
.ellipsis2
  overflow: hidden
  text-overflow: ellipsis
  display: -webkit-box
  line-clamp: 2
  -webkit-line-clamp: 2
  -webkit-box-orient: vertical

// 首页板块大标题
.indexpaneltitle
  padding: 10px 20px
  font-size: 18px
  margin: 15px 0
  border: 1px solid #e5e5e5
  border-radius: 4px
  font-weight: bold
  span
    i
      font-size: 28px
      margin: -5px 9px 0 0
      color: $basecolor

// modal样式
.commonmodalwrap
  //
  .commonmodalhead
    text-align: center
  .commonmodalcenter
    font-size: 14px
  .commonmodalfoot
    text-align: center

// 分页样式
.commonpagenav
  text-align: right
  margin-top: 15px

@media (max-width: 1200px)
  #app
    width: $wrapwidth
    margin: 0 auto

// 列表没有数据显示
.nodatalist
  padding: 10px
  text-align: center

